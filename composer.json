{
    "name": "prooph/redis-event-store",
    "description": "Prooph Redis EventStore",
    "license": "BSD-3-Clause",
    "homepage": "http://getprooph.org/",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "contact@prooph.de",
            "homepage": "http://www.prooph.de"
        },
        {
            "name": "Sascha-Oliver Prolic",
            "email": "saschaprolic@googlemail.com"
        },
        {
            "name": "Eric Braun",
            "email": "eb@oqq.be"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-redis": "^3.0",
        "prooph/common": "^4.0",
        "prooph/event-store": "7.0.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "prooph/php-cs-fixer-config": "^0.1.1",
        "malukenho/docheader": "^0.1.5",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Prooph\\EventStore\\Redis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProophTest\\EventStore\\Redis\\": "tests/",
            "ProophTest\\EventStore\\": "vendor/prooph/event-store/tests/"
        }
    },
    "config": {
        "preferred-install": {
            "prooph/*": "source"
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "vendor/bin/php-cs-fixer fix -v --diff",
        "tests": "vendor/bin/phpunit"
    }
}
